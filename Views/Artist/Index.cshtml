@model IEnumerable<ComicShop.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<h1>Artists</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark text-warning" style="border-radius:25px;padding:20px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArtistName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-light">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArtistID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArtistID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
